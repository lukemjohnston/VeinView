<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".Wells_Screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="843dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="3dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/ppg_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintBaseline_toTopOf="parent">

            <TextView
                android:id="@+id/ppg_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="10dp"
                android:text="@string/PPG_title"
                android:textColor="#363B3C"
                android:textSize="25sp"
                app:layout_constraintHorizontal_bias="0.498" />

        </LinearLayout>
        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#D7DBDD"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ppg_banner" />

        <LinearLayout
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/ppg_banner">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/input_1"
                android:textSize="15sp"
                android:fontFamily="@font/roboto"
                android:textColor="#363B3C"
                />

            <EditText
                android:id="@+id/ppg_left"
                android:layout_width="130dp"
                android:layout_height="31dp"
                android:background="@drawable/ppg_input"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:fontFamily="@font/roboto"
                android:textColor="#363B3C"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/ppg_measurement"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:textColor="#A6ABAD"
                />
        </LinearLayout>

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#D8D8D8"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input1" />

        <LinearLayout
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/input1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/input_2"
                android:textSize="15sp"
                android:fontFamily="@font/roboto"
                android:textColor="#363B3C"
                />

            <EditText
                android:id="@+id/ppg_right"
                android:layout_width="130dp"
                android:layout_height="31dp"
                android:background="@drawable/ppg_input"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"
                android:fontFamily="@font/roboto"
                android:textColor="#363B3C"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/ppg_measurement"
                android:textSize="14sp"
                android:fontFamily="@font/roboto"
                android:textColor="#A6ABAD"
                />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#D8D8D8"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ppg_submit"
            android:layout_width="150dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:alpha="0.85"
            android:background="@drawable/button"
            android:backgroundTint="#82CB70"
            android:drawableStart="@drawable/ic_baseline_file_upload_24"
            android:drawablePadding="0dp"
            android:elevation="0dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:letterSpacing=".05"
            android:paddingHorizontal="30dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="#F7F8F9"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
