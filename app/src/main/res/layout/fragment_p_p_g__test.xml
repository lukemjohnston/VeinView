<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4CAF50"
    tools:context=".PPG_Test"
    android:backgroundTint="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBaseline_toTopOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:background="@drawable/title_border">

        <TextView
            android:id="@+id/dvtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_wells_criteria"
            android:layout_gravity="start"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:drawablePadding="5dp"
            android:textColor="#363B3C"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.498" />
        <Button
            android:id="@+id/button_wells_score_submit"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="58dp"
            android:paddingHorizontal="20dp"
            android:textColor="#F7F8F9"
            android:textAllCaps="false"
            android:text="@string/submit"
            android:letterSpacing=".05"
            android:textSize="15sp"
            android:backgroundTint="#82CB70"
            android:background="@drawable/button"
            android:drawableStart="@drawable/ic_baseline_file_upload_24"
            android:drawablePadding="3dp"
            app:cornerRadius="8dp"
            android:fontFamily="@font/roboto_bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>