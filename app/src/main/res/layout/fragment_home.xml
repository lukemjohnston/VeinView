<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".HomeFragment"
    android:backgroundTint="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dvtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_question"
            android:drawablePadding="5dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/dvt_info"
            android:textColor="#A6ABAD"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.498" />

        <TextView
            android:id="@+id/wells_score_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wells_score_info"
            android:layout_marginTop="60dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="left"
            android:fontFamily="@font/roboto"

            android:drawablePadding="5dp"
            android:textColor="#A6ABAD"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.498" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonWells"
            android:layout_width="270dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="17dp"
            android:alpha="0.85"
            android:background="@drawable/button"
            android:backgroundTint="#82CB70"
            android:elevation="10dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:letterSpacing=".05"
            android:shadowDy="4"
            android:text="@string/wells_screen_button"
            android:textAllCaps="false"
            android:textColor="#F7F8F9"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_baseline_credit_score_24"
            android:drawablePadding="-30dp"
            android:paddingLeft="45dp"
            />

        <TextView
            android:id="@+id/ppg_test_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ppg_test_info"
            android:layout_marginTop="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="left"
            android:fontFamily="@font/roboto"
            android:drawablePadding="5dp"
            android:textColor="#A6ABAD"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.498" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPPG"
            android:layout_width="270dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="17dp"
            android:alpha="0.85"
            android:background="@drawable/button"
            android:backgroundTint="#8DBBCA"
            android:elevation="10dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:letterSpacing=".05"
            android:shadowDy="4"
            android:text="@string/ppg_test_button"
            android:textAllCaps="false"
            android:textColor="#F7F8F9"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_pencil"
            android:drawablePadding="-50dp"
            android:paddingLeft="50dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>